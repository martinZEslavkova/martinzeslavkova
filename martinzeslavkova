    <script>
        function openModal(src) {
            document.getElementById('modalImage').src = src;
            document.getElementById('myModal').style.display = 'block';
            document.getElementById('myModal').setAttribute('aria-hidden', 'false');
        }

        function closeModal() {
            document.getElementById('myModal').style.display = 'none';
            document.getElementById('myModal').setAttribute('aria-hidden', 'true');
        }

        // Zavření modálního okna kliknutím mimo něj
        window.onclick = function(event) {
            if (event.target == document.getElementById('myModal')) {
                closeModal();
            }
        }

        // Zavření modálního okna klávesou Escape
        window.onkeydown = function(event) {
            if (event.key === 'Escape') {
                closeModal();
            }
        }
    </script>
